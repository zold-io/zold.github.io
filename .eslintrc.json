{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": "google",
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "rules": {
    "camelcase": "off",
    "comma-dangle": "off",
    "indent": [
      "error",
      2
    ],
    "no-invalid-this": "off",
    "no-unused-vars": "off",
    "no-var": "off",
    "require-jsdoc": "off",
    "spaced-comment": [
      "error",
      "always",
      {
        "markers": [
          "global"
        ]
      }
    ]
  }
}
