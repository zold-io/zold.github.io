{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": "google",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "camelcase": "off",
        "no-unused-vars": "off",
        "no-invalid-this": "off",
        "no-var": "off",
        "spaced-comment": ["error", "always", { "markers": ["global"] }],
        "require-jsdoc": "off",
        "comma-dangle": "off",
        "indent": ["error", 2]
    }
}
